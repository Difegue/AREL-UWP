            <TextBox x:Name="nom" Grid.Column="1" Grid.Row="2"/>
            <!-- texte -->
            <TextBlock Text="Mot de Passe" HorizontalAlignment="Center" Margin="0,5,0,5" Grid.Column="1" Grid.Row="3" />
            <!--champs pour password -->
            <PasswordBox x:Name="pass" Grid.Column="1" Grid.Row="4"/>
            <!--bouton de validation -->


            <Button Content="Se Connecter" Click="login_button" HorizontalAlignment="Center" Margin="-140,5,0,5" Grid.Row="5" Grid.Column="1" Width="130"/>
            <Button Content="Hors connexion" Click="internet_button" HorizontalAlignment="Center" Margin="140,5,0,5" Grid.Column="1" Grid.Row="5" Width="130" />

            
        </Grid>
            <CheckBox Content="Rester connecté" HorizontalAlignment="Center" Checked="stayConnectBox" />

        <ScrollViewer VerticalAlignment="Top" HorizontalAlignment="Center" FontWeight="Bold" HorizontalScrollBarVisibility="Disabled">
            <!-- zone de texte ou on afiche les erreurs -->
            <TextBlock x:Name="result" Foreground="Red" Text="{Binding Valeur}"/>
        </ScrollViewer>







